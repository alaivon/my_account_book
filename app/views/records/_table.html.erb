
<thead>
	<tr>
		<th><%= sortable "period", 'Date'  %></th>
		<th><%= sortable "amount"  %></th>
		<th>Info</th>
		<th>Options</th>
	</tr>
</thead>
<tbody>
	<% record.each do |record| %>
		<tr>
			<td><%= record.period %></td>
			<td><%= number_to_currency(record.amount) %></td>
			<td><%= record.info %></td>
			<% if current_user == record.user %>
			<td id="option">
				<%= link_to "Edit", edit_record_path(record)  %> | 
				<%= link_to "Delete", record, method: :delete, data: {confirm: "Are you sure?"}  %>
			</td>
			<% end %>
		</tr>
	<% end %>
</tbody>
