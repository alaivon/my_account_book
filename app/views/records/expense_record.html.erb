<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<table class="table table-hover table-bordered">
			<% if current_user.records.find_type(2).empty? %>
				<h3>You haven't save any records here!</h3>
			<% else %>
				<h3>Expense</h3> <hr>
				<div class="show_total">
					<p class="total">Total <span id="total"><%= render_total_amount(@expense_record) %></span> from <span id="early_date"><%= render_earliest_date(current_user.records, 2) %></span></p>
				</div>
				<%= render 'table', record: @expense_record %>		
			<% end %>
			</table>
		</div>
	</div>
</div>