
<div class="row">
	<div class="col-md-4 col-md-offset-1">
		<div class="panel panel-success revenue">
			<div class="panel-heading">
				<h3>Revenue</h3>
			</div>
			<div class="panel-body">
				<h4>During this month</h4>
				<h4 class="amount" id="revenue"><%= render_total_amount(@revenue_month_record) %></h4>
				<hr>
				<h4>During this year</h4>
				<h4 class="amount" id="revenue"><%= render_total_amount(@revenue_year_record) %></h4>	
			</div>
		</div>
	</div>

	<div class="col-md-4 col-md-offset-1">
		<div class="panel panel-info expense">
			<div class="panel-heading">
				<h3>Expense</h3>
			</div>
			<div class="panel-body">
				<h4>During this month</h4>
				<h4 class="amount" id="expense"><%= render_total_amount(@expense_month_record) %></h4>
				<hr>
				<h4>During this year</h4>
				<h4 class="amount" id="expense"><%= render_total_amount(@expense_year_record) %></h4>
			</div>
		</div>
	</div>
</div>