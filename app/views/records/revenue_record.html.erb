<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<table class="table table-hover table-bordered">
			<% if current_user.records.empty? %>
				<h3>You haven't save any records here!</h3>
			<% else %>
				<h3>Revenue</h3> <hr>
				<p class="total">Total <span id="total"><%= render_total_amount(@revenue_record) %></span> from <span id="early_date"><%= render_earliest_date(current_user.records, 1) %></span></p>

				<%= render 'table', record: @revenue_record %>		
			
			<% end %>
			</table>
		</div>
	</div>
</div>