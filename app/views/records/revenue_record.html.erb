<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<table class="table table-hover table-bordered">
			<% if current_user.records.find_type(1).empty? %>
				<h3>You haven't save any records here!</h3>
			<% else %>
				<h3>Revenue</h3> <hr>
				<div class="show_total">
					<p class="total">Total <span id="total"><%= render_total_amount(current_user.records.find_type(1)) %></span> from <span id="early_date"><%= render_earliest_date(current_user.records, 1) %></span></p>
				</div>
				<%= render 'table', record: @revenue_record %>		
		
			<%= will_paginate @erevenue_record %>
			<% end %>
			</table>
		</div>
	</div>
</div>